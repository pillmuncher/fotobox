{
  "resource_path": "/home/pi/Desktop",
  "bounce_time": 300,
  "workers": 5,
  "led": {
    "green": 37,
    "yellow": 15,
    "red": 38
  },
  "event": {
    "shoot":{
      "port": 16
    },
    "quit": {
      "port": 35,
      "code": 0
    },
    "reboot": {
      "port": 32,
      "code": 65
    },
    "shutdown": {
      "port": 36,
      "code": 64
    }
  },
  "blink": {
    "interval": 1
  },
  "photo": {
    "file_mask": "/var/fotos/Fotos/{}-{{counter:02d}}.jpg",
    "time_mask": "am %Y-%m-%d um %H-%M-%S Uhr",
    "width": 2592,
    "height": 1944,
    "lights": [13, 21, 19, 11],
    "prepare": {
      "image_mask": "countdown/prepare_{}.jpg",
      "image_position": [0, 0]
    },
    "count": {
      "sound_mask": "countdown/count_{}.mp3",
      "image_mask": "countdown/count_{}.jpg",
      "image_position": [0, 0]
    },
    "smile": {
      "image_file": "countdown/smile.png",
      "image_position": [0, 0]
    },
    "songs": {
      "enabled": true,
      "glob_mask": "countdown/songs/*.mp3"
    }
  },
  "screen": {
    "width": 1230,
    "height": 950,
    "offset": [0, 0]
  },
  "montage": {
    "interval": 7,
    "file_mask": "/media/usb/montage/{}.jpg",
    "width": 1280,
    "height":1024,
    "background": [200, 200, 200],
    "margin": {
      "left": 0,
      "right": 0,
      "top": 0,
      "bottom": 0,
      "padding": 3
    },
    "watermark": {
      "image_file": "montage/watermark.png"
    }
  },
  "printout": {
    "file_mask": "/var/fotos/printouts/{}.jpg",
    "time_mask": "Ausdruck am %Y-%m-%d um %H-%M-%S Uhr",
    "foreground": [0, 0, 0],
    "background": [255, 255, 255],
    "margin": {
      "left": 50,
      "right": 50,
      "top": 50,
      "bottom": 50,
      "padding": 50
    },
    "logo": {
      "image_file": "printout/logo.png"
    }
  }
}
